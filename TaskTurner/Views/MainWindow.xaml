<Window x:Class="TaskTurner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTurner"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <!-- Nav panel -->
        <Rectangle Fill="{StaticResource AccentDark}" Grid.Column="0"/>

        <!-- Task List Background -->
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>

        <!-- Task List Grid -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Task Label -->
            <Label Style="{StaticResource Heading1}" 
                   VerticalAlignment="Top"
                   Padding="20 0 0 0"
                   IsHitTestVisible="False"
                   Content="Tasks" />

            <!-- Add New Task buton -->
            <Button Style="{StaticResource RoundAccentButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="40"
                    Width="40" 
                    Margin="0 0 20 0">
                <!-- Icon -->
                <Viewbox Height="25"
                         Width="25">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>

            <!-- Search Panel -->
            <TextBox x:Name="TaskSearchBox"
                Style="{StaticResource TaskListSearchBox}"
                Grid.Row="1"
                Margin="20 0"/>
            <Label IsHitTestVisible="False"
                   Content="Search tasks..." 
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Style="{StaticResource SearchButton}" 
                    HorizontalAlignment="Left" 
                    Margin="375,0,0,0" 
                    VerticalAlignment="Center" 
                    Background="White"
                    BorderBrush="Transparent"
                    Width="30"
                    Height="30" Grid.Row="1">
                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource SearchIcon}" Fill="{StaticResource Borders}"/>
                </Viewbox>
            </Button>
            
            <!--List View For Task Items-->
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20" 
                      BorderBrush="Transparent"/>

        </Grid>

        <!--Task Viewer-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!--Task Details-->
            <Grid Grid.Row="0"
                  Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Task Title"
                         Style="{StaticResource Title}"
                         VerticalAlignment="Center"/>
                
                <!--Importance Badge-->
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="{StaticResource Importence-Crit}">
                    <TextBlock Text="Critical" Foreground="{StaticResource OnAccent}" FontWeight="Bold"/>
                </Border>
                
                <!--Description Scroll Bar-->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <!--Description-->
                    <TextBlock Text="This is a short descriptoin test."
                           FontSize="16"
                           Foreground="{StaticResource PlaceholderText}"
                           Margin="0 20"/>
                </ScrollViewer>
               
                <!--Due Date-->
                <TextBlock Text="Due: 17/12/2023"
                           Background="{StaticResource AccentDark}"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="White"/>

            </Grid>

            <Grid Grid.Row="1"
                  Margin="0 20 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--List Title-->
                <TextBlock Style="{StaticResource Title}" Text="Task Check List"
                           VerticalAlignment="Center" Margin="20 0 0 0"/>
                <!--Check Lists-->
                <ListView Grid.Row="1"
                    Background="Transparent"
                          BorderThickness="0"
                          >
                
                </ListView>
            </Grid>
            
            <!--Task View Buttons-->
            <Grid Grid.Row="2">
                <Button Style="{StaticResource TaslViewDeleteButton}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Delete"
                        Margin="20 0 0 0"/>
                <Button Style="{StaticResource TaslViewEditButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Edit"/>
                <Button Style="{StaticResource TaslViewCompleteButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Complete"
                        Margin="0 0 20 0"/> 
            </Grid>
            
        </Grid>

        <!-- Task status Bar -->
        <Rectangle Fill="{StaticResource TaskStatusBackground}" Grid.Column="3" />
    </Grid>
</Window>
