<UserControl x:Class="TaskTurner.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTurner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock Text="Title" Style="{StaticResource Title}" Foreground="{StaticResource TaskListUCTitle}" Margin="20 0" VerticalAlignment="Center"/>
        
        <!--Importance Badge-->
        <Border CornerRadius="3" Background="{StaticResource PlaceholderBorder}" Padding="40 0" Height="23" HorizontalAlignment="Right" Margin="0 0 20 0">
            <TextBlock Text="Importance" Foreground="{StaticResource PlaceholderBorderText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        
        <!--Decsription-->
        <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                   TextWrapping="Wrap"
                   Grid.Row="1"
                   Margin="20 5 0 0"
                   Foreground="{StaticResource TaskListUCText}"/>
        
        <!--Due Date-->
        <TextBlock Text="Due: 21/12/2023" 
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCText}"/>

    </Grid>
</UserControl>
